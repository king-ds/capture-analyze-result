<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:weightSum="16"
        android:layout_height="match_parent">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/colorWhite"
            android:theme="@style/toolbarFont">
        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:id="@+id/rellay1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="20dp"
            android:background="@drawable/bg_entire"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="10dp"
                android:layout_height="130dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="20dp"
                android:layout_weight="1"
                android:background="@drawable/startbutton">

                <ImageView
                    android:id="@+id/image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_margin="5dp"
                    android:padding="3dp"
                    android:src="@drawable/vector_yellow" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="150dp"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvStatus"
                    android:layout_width="180dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/montserrat"
                    android:paddingTop="50dp"
                    android:text="Unhealthy"
                    android:textColor="#ffff"
                    android:textSize="30sp"
                    android:textStyle="bold" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disorder"
                android:textAlignment="center"
                android:textSize="30sp"
                android:fontFamily="@font/montserrat"
                android:textColor="@color/colorBlack"
                android:textStyle="bold"/>
        </LinearLayout>

        <android.support.v7.widget.GridLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="16"
            app:alignmentMode="alignMargins"
            app:columnCount="1"
            app:columnOrderPreserved="false"
            android:padding="14dp"
            app:rowCount="7">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:layout_marginBottom="20dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="8dp"
                app:layout_row="0"
                app:layout_column="0">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal|center_vertical"
                    android:layout_margin="16dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:layout_gravity="center_horizontal"
                        android:src="@drawable/vector_terry_s" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/montserrat"
                        android:text="Terry's Nails"
                        android:textAlignment="center"
                        android:textColor="@color/colorBlack"
                        android:textSize="25sp"
                        android:textStyle="bold" />

                </LinearLayout>


            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_marginBottom="20dp">

                <ImageView
                    app:srcCompat="@drawable/ic_wrong"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="75dp"
                    android:fontFamily="@font/montserrat"
                    android:text="Analyzed fingernail is unhealthy"
                    android:textColor="@color/colorBlack"
                    android:textAlignment="center"
                    android:textSize="25sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Considering the highest nail disorder detected, there is a possibility that you might develop:"
                    android:fontFamily="@font/montserrat"
                    android:textColor="@color/colorBlack"
                    android:textSize="20sp"
                    android:textAlignment="center"
                    app:layout_row="5"
                    app:layout_column="0"
                    android:layout_marginBottom="15dp"/>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp"
                    app:layout_column="0"
                    app:layout_row="6">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:srcCompat="@drawable/vector_possible_diseases" />

                        <TextView
                            android:id="@+id/tvDiseases"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="Heart Failure"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                    </LinearLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_row="2"
                    app:layout_column="0"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_marginBottom="10dp"
                    app:cardCornerRadius="8dp"
                    app:cardElevation="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center_horizontal|center_vertical"
                        android:layout_margin="16dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="Questionnaire"
                            android:textAlignment="textStart"
                            android:textColor="@color/colorBlack"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="10dp"/>

                        <TextView
                            android:id="@+id/tvQ1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="1.) When did you first ever have a problem like this?"
                            android:textAlignment="textStart"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            android:layout_marginBottom="10dp"/>

                        <TextView
                            android:id="@+id/tvA1"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/montserrat"
                            android:hint="Answer"
                            android:textAlignment="center"
                            android:textStyle="bold"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvQ2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="2.) How has this changed from beginning to now?"
                            android:textAlignment="textStart"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvA2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/montserrat"
                            android:hint="Answer"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvQ3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="3.) Does anyone in your family have:\na. Nail problems\nb. History of heart problems, lung problems, liver problems, etc."
                            android:textAlignment="textStart"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            android:layout_marginBottom="10dp"/>

                        <TextView
                            android:id="@+id/tvA3"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/montserrat"
                            android:hint="Answer"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvQ4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="4.) Do you have any medical problem in the past or even now?"
                            android:textAlignment="textStart"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            android:layout_marginBottom="10dp"/>

                        <TextView
                            android:id="@+id/tvA4"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/montserrat"
                            android:hint="Answer"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvQ5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="5.) List any medications that you have been taken in the past few months or years"
                            android:textAlignment="textStart"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            android:layout_marginBottom="10dp"/>

                        <TextView
                            android:id="@+id/tvA5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/montserrat"
                            android:hint="Answer"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvQ6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="6.) Do you think it is getting worse??"
                            android:textAlignment="textStart"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            android:layout_marginBottom="10dp"/>

                        <TextView
                            android:id="@+id/tvA6"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="10dp"
                            android:fontFamily="@font/montserrat"
                            android:hint="Answer"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/tvQ7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:text="7.) What other symptoms do you have?"
                            android:textAlignment="textStart"
                            android:textColor="@color/colorBlack"
                            android:textSize="18sp"
                            android:layout_marginBottom="10dp"/>

                        <TextView
                            android:id="@+id/tvA7"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/montserrat"
                            android:hint="Answer"
                            android:textAlignment="center"
                            android:textColor="@color/colorBlack"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:layout_marginBottom="10dp"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
            </LinearLayout>
        </android.support.v7.widget.GridLayout>
    </LinearLayout>
</ScrollView>
